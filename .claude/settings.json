{
    "hooks": {
        "PostToolUse": [
            {
                "matcher": "Edit|MultiEdit|Write",
                "hooks": [
                    {
                        "type": "command",
                        "command": "jq -r '.tool_input.file_path' | { read file_path; pnpm prettier --write \"$file_path\" 2>/dev/null || true; }"
                    }
                ]
            }
        ]
    }
}
